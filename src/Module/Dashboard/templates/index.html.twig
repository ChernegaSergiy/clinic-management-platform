{% extends "layouts/base.html.twig" %}

{% block title %}Панель - Клініка{% endblock %}

{% block body %}
    <div class="ui stackable grid">
        <div class="eight wide column">
            <div class="ui top attached header">Панель</div>
            <div class="ui attached segment">
                <div class="ui three stackable cards">
                    <div class="blue card">
                        <div class="content">
                            <div class="header">Пацієнти</div>
                            <div class="description">Активних: {{ patient_count }}</div>
                        </div>
                        <div class="extra content">
                            <a href="/patients" class="ui button fluid">Відкрити</a>
                        </div>
                    </div>
                    <div class="green card">
                        <div class="content">
                            <div class="header">Записи</div>
                            <div class="description">Майбутніх: {{ upcoming_appointments_count }}</div>
                        </div>
                        <div class="extra content">
                            <a href="/appointments" class="ui button fluid">Календар</a>
                        </div>
                    </div>
                    <div class="orange card">
                        <div class="content">
                            <div class="header">Склад</div>
                            <div class="description">Низький запас: {{ low_stock_items_count }}</div>
                        </div>
                        <div class="extra content">
                            <a href="/inventory" class="ui button fluid">До складу</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="eight wide column">
            <div class="ui top attached header">Заявки</div>
            <div class="ui attached segment">
                <div class="ui relaxed divided list">
                    <div class="item">Заявки з waitlist дивіться на сторінці записів.</div>
                    <div class="item">Імпорт ICD: <a href="/admin/clinical/icd-import">оновити довідник</a></div>
                </div>
            </div>
        </div>
    </div>

    <div class="ui segment">
        <div class="ui two column stackable grid">
            <div class="column">
                <h3 class="ui header">Найближчі записи</h3>
                {% if upcoming_appointments is empty %}
                    <div class="ui message">Немає майбутніх записів.</div>
                {% else %}
                    <table class="ui very basic table">
                        <thead>
                            <tr>
                                <th>Пацієнт</th>
                                <th>Лікар</th>
                                <th>Час</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for appointment in upcoming_appointments %}
                                <tr>
                                    <td>{{ appointment.patient_name }}</td>
                                    <td>{{ appointment.doctor_name }}</td>
                                    <td>{{ appointment.start_time|date('Y-m-d H:i') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
            <div class="column">
                <h3 class="ui header">Позиції з низьким запасом</h3>
                {% if low_stock_items is empty %}
                    <div class="ui message">Наразі немає позицій з низьким запасом.</div>
                {% else %}
                    <table class="ui very basic table">
                        <thead>
                            <tr>
                                <th>Назва</th>
                                <th>Кількість</th>
                                <th>Мін. рівень</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in low_stock_items %}
                                <tr>
                                    <td>{{ item.name }}</td>
                                    <td>{{ item.quantity }}</td>
                                    <td>{{ item.min_stock_level }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

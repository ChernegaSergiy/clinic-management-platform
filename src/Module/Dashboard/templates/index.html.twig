{% extends "layouts/base.html.twig" %}

{% block title %}Панель - Клініка{% endblock %}

{% block body %}
    <div class="ui padded grid">
        <div class="row">
            <h1 class="ui huge dividing header">Панель</h1>
        </div>
        <div class="center aligned row">
            <div class="eight wide mobile four wide tablet four wide computer column">
                <img class="ui centered small circular image" src="/assets/dashboard/wireframe/square-image.png" alt="Пацієнти">
                <div class="ui large basic label">Пацієнти</div>
                <p>Активних: {{ patient_count }}</p>
            </div>
            <div class="eight wide mobile four wide tablet four wide computer column">
                <img class="ui centered small circular image" src="/assets/dashboard/wireframe/square-image.png" alt="Записи">
                <div class="ui large basic label">Записи</div>
                <p>Майбутніх: {{ upcoming_appointments_count }}</p>
            </div>
            <div class="eight wide mobile four wide tablet four wide computer column">
                <img class="ui centered small circular image" src="/assets/dashboard/wireframe/square-image.png" alt="Склад">
                <div class="ui large basic label">Склад</div>
                <p>Низький запас: {{ low_stock_items_count }}</p>
            </div>
            <div class="eight wide mobile four wide tablet four wide computer column">
                <img class="ui centered small circular image" src="/assets/dashboard/wireframe/square-image.png" alt="Профіль">
                <div class="ui large basic label">Профіль</div>
                <p>Оновіть дані профілю</p>
            </div>
        </div>
        <div class="ui hidden section divider"></div>
        <div class="row">
            <h1 class="ui huge dividing header">Найближчі записи та склад</h1>
        </div>
        <div class="row">
            <div class="sixteen wide mobile eight wide tablet eight wide computer column">
                <h3 class="ui header">Найближчі записи</h3>
                {% if upcoming_appointments is empty %}
                    <div class="ui message">Немає майбутніх записів.</div>
                {% else %}
                    <table class="ui single line striped selectable unstackable table">
                        <thead>
                        <tr>
                            <th>Пацієнт</th>
                            <th>Лікар</th>
                            <th>Час</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for appointment in upcoming_appointments %}
                            <tr>
                                <td>{{ appointment.patient_name }}</td>
                                <td>{{ appointment.doctor_name }}</td>
                                <td>{{ appointment.start_time|date('Y-m-d H:i') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
            <div class="sixteen wide mobile eight wide tablet eight wide computer column">
                <h3 class="ui header">Позиції з низьким запасом</h3>
                {% if low_stock_items is empty %}
                    <div class="ui message">Наразі немає позицій з низьким запасом.</div>
                {% else %}
                    <table class="ui single line striped selectable unstackable table">
                        <thead>
                        <tr>
                            <th>Назва</th>
                            <th>Кількість</th>
                            <th>Мін. рівень</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in low_stock_items %}
                            <tr>
                                <td>{{ item.name }}</td>
                                <td>{{ item.quantity }}</td>
                                <td>{{ item.min_stock_level }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

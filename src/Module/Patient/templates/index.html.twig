{% extends "layouts/base.html.twig" %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Пацієнти - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <div class="ui grid">
            <div class="eight wide column">
                <h2 class="ui header">Список пацієнтів</h2>
            </div>
            <div class="eight wide column right aligned">
                <a href="/patients/export-csv" class="ui secondary button">
                    <i class="file alternate outline icon"></i> Експорт в CSV
                </a>
                <a href="/patients/export-json" class="ui secondary button">
                    <i class="file alternate outline icon"></i> Експорт в JSON
                </a>
                <a href="/patients/import-json" class="ui positive button">
                    <i class="upload icon"></i> Імпорт з JSON
                </a>
                <a href="/patients/new" class="ui primary button">
                    <i class="plus icon"></i> Додати пацієнта
                </a>
            </div>
        </div>

        <div class="ui divider"></div>

        <form class="ui form" method="GET" action="/patients">
            <div class="field">
                <div class="ui icon input">
                    <input type="text" name="search" placeholder="Пошук пацієнтів..." value="{{ searchTerm ?? '' }}">
                    <i class="search icon"></i>
                </div>
            </div>
        </form>

        <table class="ui celled table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ім'я</th>
                    <th>Дата народження</th>
                    <th>Телефон</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                {% for patient in patients %}
                    <tr>
                        <td>{{ patient.id }}</td>
                        <td>{{ patient.name }}</td>
                        <td>{{ patient.birth_date }}</td>
                        <td>{{ patient.phone }}</td>
                        <td>
                            <a href="/patients/show?id={{ patient.id }}" class="ui icon button">
                                <i class="eye icon"></i>
                            </a>
                            <a href="/patients/edit?id={{ patient.id }}" class="ui icon button">
                                <i class="edit icon"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="center aligned">Немає пацієнтів для відображення.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

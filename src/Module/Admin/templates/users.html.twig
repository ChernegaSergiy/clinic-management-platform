{% extends "layouts/base.html.twig" %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Користувачі - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <div class="ui grid">
            <div class="eight wide column">
                <h2 class="ui header">Користувачі</h2>
            </div>
            <div class="eight wide column right aligned">
                <a href="/admin/users/new" class="ui primary button">
                    <i class="plus icon"></i> Додати користувача
                </a>
            </div>
        </div>

        <div class="ui divider"></div>

        <form class="ui form" method="get" action="/admin/users">
            <div class="field">
                <div class="ui icon input">
                    <input type="text" name="search" value="{{ searchTerm|default('') }}" placeholder="Пошук користувачів...">
                    <i class="search icon"></i>
                </div>
            </div>
        </form>

        <table class="ui celled unstackable table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ім'я</th>
                    <th>Прізвище</th>
                    <th>Email</th>
                    <th>Роль</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.first_name }}</td>
                        <td>{{ user.last_name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.role_name }}</td>
                        <td>
                            <a href="/admin/users/show?id={{ user.id }}" class="ui icon button">
                                <i class="eye icon"></i>
                            </a>
                            <a href="/admin/users/edit?id={{ user.id }}" class="ui icon button">
                                <i class="edit icon"></i>
                            </a>
                            <form action="/admin/users/delete" method="POST" style="display: inline;" onsubmit="return confirm('Ви впевнені, що хочете видалити цього користувача?');">
                                <input type="hidden" name="id" value="{{ user.id }}">
                                <button type="submit" class="ui icon button red">
                                    <i class="trash icon"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="center aligned">Немає користувачів для відображення.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

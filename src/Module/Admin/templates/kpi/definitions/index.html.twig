{% extends "layouts/base.html.twig" %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Визначення KPI - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <div class="ui grid">
            <div class="eight wide column">
                <h2 class="ui header">Визначення KPI</h2>
            </div>
            <div class="eight wide column right aligned">
                <a href="/kpi/definitions/new" class="ui primary button">
                    <i class="plus icon"></i> Додати визначення KPI
                </a>
            </div>
        </div>

        <div class="ui divider"></div>

        {% if definitions is empty %}
            <p>Немає визначень KPI для відображення.</p>
        {% else %}
            <table class="ui celled table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Назва</th>
                        <th>Тип</th>
                        <th>Цільове значення</th>
                        <th>Одиниця</th>
                        <th>Активний</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                    {% for definition in definitions %}
                        <tr>
                            <td>{{ definition.id }}</td>
                            <td>{{ definition.name }}</td>
                            <td>{{ definition.kpi_type }}</td>
                            <td>{{ definition.target_value ?: 'Не встановлено' }}</td>
                            <td>{{ definition.unit ?: 'N/A' }}</td>
                            <td>
                                {% if definition.is_active %}
                                    <i class="check circle icon green"></i> Так
                                {% else %}
                                    <i class="times circle icon red"></i> Ні
                                {% endif %}
                            </td>
                            <td>
                                {# <a href="/kpi/definitions/edit?id={{ definition.id }}" class="ui icon button">
                                    <i class="edit icon"></i>
                                </a>
                                <a href="/kpi/definitions/delete?id={{ definition.id }}" class="ui icon button red">
                                    <i class="trash icon"></i>
                                </a> #}
                                <button class="ui icon button" onclick="alert('Функціонал редагування буде додано пізніше');"><i class="edit icon"></i></button>
                                <button class="ui icon button red" onclick="alert('Функціонал видалення буде додано пізніше');"><i class="trash icon"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}

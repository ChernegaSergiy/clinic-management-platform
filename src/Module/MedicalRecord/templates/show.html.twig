{% extends "layouts/base.html.twig" %}

{% block title %}Медичний запис #{{ record.id }} - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <h2 class="ui header">Деталі медичного запису #{{ record.id }}</h2>
        <div class="ui divider"></div>

        <table class="ui unstackable definition table">
            <tbody>
                <tr>
                    <td>ID</td>
                    <td>{{ record.id }}</td>
                </tr>
                <tr>
                    <td>Пацієнт</td>
                    <td><a href="/patients/show?id={{ record.patient_id }}">{{ record.patient_name }}</a></td>
                </tr>
                <tr>
                    <td>Лікар</td>
                    <td>{{ record.doctor_name }}</td>
                </tr>
                <tr>
                    <td>Дата візиту</td>
                    <td>{{ record.visit_date|date('Y-m-d H:i') }}</td>
                </tr>
                <tr>
                    <td>Код діагнозу (ICD-10)</td>
                    <td>{{ record.diagnosis_code }}</td>
                </tr>
                {% if record.icd_codes is not empty %}
                <tr>
                    <td>Додаткові коди ICD-10</td>
                    <td>
                        <div class="ui labels">
                            {% for icd in record.icd_codes %}
                                <a class="ui label">{{ icd.code }} - {{ icd.description }}</a>
                            {% endfor %}
                        </div>
                    </td>
                </tr>
                {% endif %}
                {% if record.intervention_codes is not empty %}
                <tr>
                    <td>Коди медичних інтервенцій (НК 026:2021)</td>
                    <td>
                        <div class="ui labels">
                            {% for intervention in record.intervention_codes %}
                                <a class="ui label">{{ intervention.code }} - {{ intervention.description }}</a>
                            {% endfor %}
                        </div>
                    </td>
                </tr>
                {% endif %}
                <tr>
                    <td>Діагноз</td>
                    <td>{{ record.diagnosis_text|nl2br }}</td>
                </tr>
                <tr>
                    <td>Лікування</td>
                    <td>{{ record.treatment|nl2br }}</td>
                </tr>
                <tr>
                    <td>Примітки</td>
                    <td>{{ record.notes|nl2br }}</td>
                </tr>
            </tbody>
        </table>

        <div class="ui divider"></div>

        <a href="/medical-records/edit?id={{ record.id }}" class="ui primary button">Редагувати</a>
        <a href="/patients/show?id={{ record.patient_id }}" class="ui button">Повернутися до пацієнта</a>
    </div>

    <div class="ui segment">
        <h3 class="ui header">Вкладення</h3>
        <form class="ui form" action="/medical-records/attachments/upload?id={{ record.id }}" method="POST" enctype="multipart/form-data">
            <div class="field">
                <label>Завантажити новий файл</label>
                <div class="ui action input">
                    <input type="text" id="attachments-display" readonly placeholder="Файл не обрано">
                    <label for="attachments-upload" class="ui button">Обрати файл</label>
                </div>
                <input type="file" id="attachments-upload" name="attachments[]" multiple style="display: none;">
            </div>
            <button class="ui primary button" type="submit">Завантажити</button>
        </form>

        <div class="ui divider"></div>

        {% if attachments is empty %}
            <p>Немає вкладень для цього медичного запису.</p>
        {% else %}
            <table class="ui celled unstackable table">
                <thead>
                    <tr>
                        <th>Назва файлу</th>
                        <th>Розмір</th>
                        <th>Тип</th>
                        <th>Завантажено</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                    {% for attachment in attachments %}
                        <tr>
                            <td>{{ attachment.filename }}</td>
                            <td>{{ (attachment.size / 1024 / 1024) | number_format(2) }} MB</td>
                            <td>{{ attachment.mime_type }}</td>
                            <td>{{ attachment.created_at|date('Y-m-d H:i') }}</td>
                            <td>
                                <a href="/medical-records/attachments/download?record_id={{ record.id }}&attachment_id={{ attachment.id }}" class="ui icon button">
                                    <i class="download icon"></i> Завантажити
                                </a>
                                {# <a href="/attachments/{{ attachment.id }}/versions" class="ui icon button">
                                    <i class="history icon"></i> Версії
                                </a> #}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>

    <div class="ui segment">
        <h3 class="ui header">Лабораторні замовлення</h3>
        <a href="/lab-orders/new?record_id={{ record.id }}" class="ui green button">Створити лабораторне замовлення</a>
        <table class="ui celled unstackable table">
            <thead>
                <tr>
                    <th>Код замовлення</th>
                    <th>Статус</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                {% for order in lab_orders %}
                    <tr>
                        <td>{{ order.order_code }}</td>
                        <td>{{ order.status }}</td>
                        <td>
                            <a href="/lab-orders/show?id={{ order.id }}" class="ui icon button">
                                <i class="eye icon"></i>
                            </a>
                            <a href="/lab-orders/edit?id={{ order.id }}" class="ui icon button">
                                <i class="edit icon"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="center aligned">Немає лабораторних замовлень для цього запису.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('attachments-upload');
            const displayInput = document.getElementById('attachments-display');

            if (fileInput && displayInput) {
                fileInput.addEventListener('change', function() {
                    if (fileInput.files.length === 0) {
                        displayInput.value = 'Файл не обрано';
                        return;
                    }
                    const names = Array.from(fileInput.files).map(f => f.name).join(', ');
                    displayInput.value = names;
                });
            }
        });
    </script>
{% endblock %}

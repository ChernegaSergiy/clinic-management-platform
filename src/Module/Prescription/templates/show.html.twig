{% extends "layouts/base.html.twig" %}

{% block title %}Рецепт #{{ prescription.id }} - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <h2 class="ui header">Деталі рецепта #{{ prescription.id }}</h2>
        <div class="ui divider"></div>

        <table class="ui unstackable definition table">
            <tbody>
                <tr>
                    <td>Пацієнт</td>
                    <td><a href="/patients/show?id={{ prescription.patient_id }}">{{ prescription.patient_name }}</a></td>
                </tr>
                <tr>
                    <td>Лікар</td>
                    <td>{{ prescription.doctor_name }}</td>
                </tr>
                <tr>
                    <td>Медичний запис</td>
                    <td>
                        {% if prescription.medical_record_id %}
                            <a href="/medical-records/show?id={{ prescription.medical_record_id }}">#{{ prescription.medical_record_id }}</a>
                        {% else %}
                            Немає
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Дата виписки</td>
                    <td>{{ prescription.issue_date|date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <td>Дата закінчення</td>
                    <td>{{ prescription.expiry_date ? prescription.expiry_date|date('Y-m-d') : 'Не вказано' }}</td>
                </tr>
                <tr>
                    <td>Примітки</td>
                    <td>{{ prescription.notes|nl2br }}</td>
                </tr>
            </tbody>
        </table>

        <div class="ui divider"></div>

        <h3 class="ui header">Пункти рецепта</h3>
        {% if prescription.items is empty %}
            <p>Немає пунктів у цьому рецепті.</p>
        {% else %}
            <table class="ui celled unstackable table">
                <thead>
                    <tr>
                        <th>Назва медикаменту</th>
                        <th>Дозування</th>
                        <th>Частота</th>
                        <th>Тривалість</th>
                        <th>Примітки</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in prescription.items %}
                        <tr>
                            <td>{{ item.medication_name }}</td>
                            <td>{{ item.dosage }}</td>
                            <td>{{ item.frequency }}</td>
                            <td>{{ item.duration ?: 'Не вказано' }}</td>
                            <td>{{ item.notes ?: 'Немає' }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}

        <div class="ui divider"></div>

        {# <a href="/prescriptions/edit?id={{ prescription.id }}" class="ui primary button">Редагувати</a> #}
        <a href="/patients/show?id={{ prescription.patient_id }}" class="ui button">Повернутися до пацієнта</a>
    </div>
{% endblock %}

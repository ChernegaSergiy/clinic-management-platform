{% extends "layouts/base.html.twig" %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Календар записів - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <div class="ui grid">
            <div class="eight wide column">
                <h2 class="ui header">Календар записів</h2>
            </div>
            <div class="eight wide column right aligned">
                <a href="/appointments/new" class="ui primary button">
                    <i class="plus icon"></i> Створити запис
                </a>
            </div>
        </div>

        <div class="ui divider"></div>

        <div id='calendar'></div>

        <div class="ui divider"></div>
        <h3 class="ui header">Легенда статусів</h3>
        <div class="ui labels">
            <a class="ui label blue">Заплановано</a>
            <a class="ui label green">Виконано</a>
            <a class="ui label red">Скасовано</a>
            <a class="ui label yellow">Не з'явився</a>
            <a class="ui label grey">Інше</a>
        </div>

        <div class="ui divider"></div>
        <h3 class="ui header">Заявки з публічної форми (waitlist)</h3>
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Пацієнт</th>
                    <th>Бажаний лікар</th>
                    <th>Дата</th>
                    <th>Нотатки</th>
                    <th>Статус</th>
                </tr>
            </thead>
            <tbody>
                {% for entry in waitlist %}
                    <tr>
                        <td>{{ entry.id }}</td>
                        <td>{{ entry.patient_name ?? 'Невідомо' }}</td>
                        <td>{{ entry.doctor_name ?? 'Будь-який' }}</td>
                        <td>{{ entry.desired_start_time ?: '—' }}</td>
                        <td>{{ entry.notes ?: '—' }}</td>
                        <td>{{ entry.status }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="center aligned">Немає заявок у списку очікування.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@6.1.15/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var resources = {{ doctors|json_encode|raw }} || [];
            var calendar = new FullCalendar.Calendar(calendarEl, {
                schedulerLicenseKey: 'CC-Attribution-NonCommercial-NoDerivatives',
                plugins: [ FullCalendar.ResourceTimeline, FullCalendar.DayGrid, FullCalendar.TimeGrid, FullCalendar.Interaction ],
                initialView: 'resourceTimelineDay',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'resourceTimelineDay,resourceTimelineWeek,resourceTimelineMonth'
                },
                resourceAreaHeaderContent: 'Лікарі',
                resources: resources,
                events: '/api/appointments',
            });
            calendar.render();
        });
    </script>
{% endblock %}

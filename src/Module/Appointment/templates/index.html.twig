{% extends "layouts/base.html.twig" %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Календар записів - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <div class="ui grid">
            <div class="eight wide column">
                <h2 class="ui header">Календар записів</h2>
            </div>
            <div class="eight wide column right aligned">
                <a href="/appointments/new" class="ui primary button">
                    <i class="plus icon"></i> Створити запис
                </a>
            </div>
        </div>

        <div class="ui divider"></div>

        <div id='calendar'></div>

        <div class="ui divider"></div>
        <h3 class="ui header">Легенда статусів</h3>
        <div class="ui labels">
            <a class="ui label blue">Заплановано</a>
            <a class="ui label green">Виконано</a>
            <a class="ui label red">Скасовано</a>
            <a class="ui label yellow">Не з'явився</a>
            <a class="ui label grey">Інше</a>
        </div>

        <div class="ui segments">
            <div class="ui segment">
                <h3 class="ui header">Заявки з публічної форми</h3>
                <table class="ui celled unstackable table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Пацієнт</th>
                            <th>Номер</th>
                            <th>Бажаний лікар</th>
                            <th>Дата</th>
                            <th>Нотатки</th>
                            <th>Контакт</th>
                            <th>Статус</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entry in waitlist %}
                            <tr>
                                <td>{{ entry.id }}</td>
                                <td>{{ entry.patient_name ?? 'Невідомо' }}</td>
                                <td>{{ entry.ticket_number ?? '—' }}</td>
                                <td>{{ entry.doctor_name ?? 'Будь-який' }}</td>
                                <td>{{ entry.desired_start_time ?: '—' }}</td>
                                <td>{{ entry.notes ?: '—' }}</td>
                                <td>
                                    {% if entry.contact_phone %}<div>{{ entry.contact_phone }}</div>{% endif %}
                                    {% if entry.contact_email %}<div>{{ entry.contact_email }}</div>{% endif %}
                                </td>
                                <td>{{ entry.status }}</td>
                                <td>
                                    <a class="ui tiny primary button" href="/appointments/new?waitlist_id={{ entry.id }}">Створити запис</a>
                                    <form action="/appointments/waitlist/reject" method="POST" style="display:inline;">
                                        <input type="hidden" name="id" value="{{ entry.id }}">
                                        <button type="submit" class="ui tiny negative button">Відхилити</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="8" class="center aligned">Немає заявок у списку очікування.</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="ui segment">
                <h3 class="ui header">Список записів</h3>
                <table class="ui celled unstackable table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Пацієнт</th>
                            <th>Лікар</th>
                            <th>Початок</th>
                            <th>Статус</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for appt in appointments %}
                            <tr>
                                <td>{{ appt.id }}</td>
                                <td>{{ appt.patient_name }}</td>
                                <td>{{ appt.doctor_name }}</td>
                                <td>{{ appt.start_time|date('Y-m-d H:i') }}</td>
                                <td>{{ appt.status }}</td>
                                <td>
                                    <a class="ui tiny button" href="/appointments/show?id={{ appt.id }}">Переглянути</a>
                                    <a class="ui tiny primary button" href="/appointments/edit?id={{ appt.id }}">Редагувати</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="6" class="center aligned">Немає записів.</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@6.1.15/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var resources = {{ doctors|json_encode|raw }} || [];
            var calendar = new FullCalendar.Calendar(calendarEl, {
                schedulerLicenseKey: 'CC-Attribution-NonCommercial-NoDerivatives',
                initialView: 'resourceTimelineDay',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'resourceTimelineDay,resourceTimelineWeek,resourceTimelineMonth'
                },
                resourceAreaHeaderContent: 'Лікарі',
                resources: resources,
                events: '/api/appointments',
            });
            calendar.render();
        });
    </script>
{% endblock %}

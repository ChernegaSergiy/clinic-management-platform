{% extends "layouts/public.html.twig" %}

{% block title %}Помилка — Клініка{% endblock %}

{% block body %}
    <section class="section-block">
        <div class="notice notice--error">
            <div class="notice__badge">Помилка</div>
            <h1 class="notice__title">Щось пішло не так</h1>
            <p class="notice__text">{{ message }}</p>
            {% if detail %}
                <div class="notice__detail">
                    <strong>Деталі:</strong>
                    <pre>{{ detail }}</pre>
                </div>
            {% endif %}
            <div class="notice__actions">
                <a class="button button--primary" href="/">Повернутися на головну</a>
            </div>
        </div>
    </section>
{% endblock %}

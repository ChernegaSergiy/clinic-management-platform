{% extends "layouts/public.html.twig" %}

{% block title %}{{ page.hero.title }} — Клініка{% endblock %}

{% block body %}
    <section class="hero">
        <div class="hero__badge">Міська сімейна клініка</div>
        <div class="hero__content">
            <div>
                <p class="hero__eyebrow eyebrow">Здоров'я без зайвого шуму</p>
                <h1 class="hero__title">{{ page.hero.title }}</h1>
                <p class="hero__lede lede">{{ page.hero.subtitle }}</p>
                <div class="hero__cta">
                    <a href="/book-appointment" class="button button--primary">{{ page.hero.cta_button }}</a>
                    <a href="/contact" class="button button--ghost">Поставити запитання</a>
                </div>
            </div>
            <div class="hero__card">
                <div class="hero__card-title">Найближчі вільні вікна</div>
                <ul class="hero__slots">
                    <li class="hero__slot">Сьогодні · 17:30</li>
                    <li class="hero__slot">Завтра · 09:10</li>
                    <li class="hero__slot">Ср · 14:20</li>
                </ul>
                <a href="/book-appointment" class="hero__link">Записатися →</a>
            </div>
        </div>
    </section>

    <section class="section-block section-block--split">
        <div class="section-block__head">
            <h2 class="section-block__title">{{ page.advantages.title }}</h2>
            <p class="section-block__subtitle">{{ page.advantages.subtitle }}</p>
        </div>
        <div class="feature-grid">
            {% for item in page.advantages.items %}
                <article class="feature-card">
                    <div class="feature-card__badge">#{% if loop.index < 10 %}0{% endif %}{{ loop.index }}</div>
                    <h3 class="feature-card__title">{{ item.title }}</h3>
                    <p class="feature-card__text">{{ item.description }}</p>
                    <span class="feature-card__line"></span>
                </article>
            {% endfor %}
        </div>
    </section>

    <section class="section-block section-block--contrast">
        <div class="section-block__head">
            <h2 class="section-block__title">{{ page.trust.title }}</h2>
            <p class="section-block__subtitle">Ми говоримо простою мовою та працюємо прозоро.</p>
        </div>
        <div class="stats">
            {% for item in page.trust.items %}
                <div class="stats__item">
                    <div class="stats__value">{{ item.value }}</div>
                    <div class="stats__label">{{ item.label }}</div>
                </div>
            {% endfor %}
        </div>
    </section>

    <section class="section-block section-block--cta">
        <div class="section-block__head">
            <h2 class="section-block__title">{{ page.cta.title }}</h2>
            <p class="section-block__subtitle">{{ page.cta.subtitle }}</p>
        </div>
        <div class="section-block__actions">
            <a href="/book-appointment" class="button button--primary">{{ page.cta.button }}</a>
            <a href="/contact" class="button button--ghost">Написати адміністратору</a>
        </div>
    </section>
{% endblock %}

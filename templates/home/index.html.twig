{% extends "layouts/base.html.twig" %}
{% import "components/ui.html.twig" as ui %}

{% block title %}{{ page.hero.title }} - Клініка{% endblock %}

{% block body %}
    {# Hero Section #}
    <div class="ui inverted vertical masthead center aligned segment hero-section">
        <div class="ui text container">
            <h1 class="ui inverted header">
                {{ page.hero.title }}
            </h1>
            <h2>{{ page.hero.subtitle }}</h2>
            <a href="#" class="ui huge primary button">
                {{ page.hero.cta_button }} <i class="right arrow icon"></i>
            </a>
        </div>
    </div>

    {# Services Teaser Grid #}
    <div class="ui vertical stripe segment">
        <div class="ui middle aligned stackable grid container">
            <div class="row">
                <div class="center aligned column">
                    <h2 class="ui header">{{ page.advantages.title }}</h2>
                    <p>{{ page.advantages.subtitle }}</p>
                </div>
            </div>
            <div class="row">
                {% for item in page.advantages.items %}
                    <div class="four wide column">
                        {{ ui.card(
                            item.title,
                            item.description,
                            '',
                            'https://via.placeholder.com/300x200?text=' ~ item.title|url_encode,
                            '#'
                        ) }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Testimonial/Trust Indicator Block #}
    <div class="ui inverted vertical stripe segment">
        <div class="ui text container">
            <h2 class="ui header center aligned inverted">{{ page.trust.title }}</h2>
            <div class="ui three column stackable grid">
                {% for item in page.trust.items %}
                    <div class="column">
                        <h3 class="ui inverted header">
                            <i class="users icon"></i> {{ item.value }}
                        </h3>
                        <p>{{ item.label }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Call to Action #}
    <div class="ui vertical stripe segment">
        <div class="ui text container center aligned">
            <h2 class="ui header">{{ page.cta.title }}</h2>
            <p>{{ page.cta.subtitle }}</p>
            <a href="#" class="ui huge button">{{ page.cta.button }}</a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            min-height: 700px;
            padding: 1em 0em;
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://via.placeholder.com/1500x700?text=Clinic+Hero');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .hero-section h1.header {
            font-size: 4em;
            font-weight: normal;
            margin-bottom: 0em;
            padding-bottom: 0em;
        }
        .hero-section h2 {
            font-size: 1.7em;
            font-weight: normal;
            margin-top: 1.5em;
        }
        .ui.vertical.stripe {
            padding: 8em 0em;
        }
        .ui.inverted.vertical.stripe {
            background-color: #2185d0; /* Primary Blue from design system */
            padding: 8em 0em;
            color: white;
        }
        .ui.inverted.vertical.stripe h2.header,
        .ui.inverted.vertical.stripe h3.header {
            color: white;
        }
        .ui.inverted.vertical.stripe p {
            color: rgba(255, 255, 255, .9);
        }
    </style>
{% endblock %}

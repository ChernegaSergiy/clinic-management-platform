{% extends "layouts/base.html.twig" %}
{% import "components/forms.html.twig" as forms %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Вхід - Клініка{% endblock %}

{% block body %}
    <div class="ui middle aligned center aligned grid">
        <div class="column" style="max-width: 450px;">
            <h2 class="ui teal image header">
                <div class="content">
                    Увійдіть до свого облікового запису
                </div>
            </h2>
            <form class="ui large form" method="POST" action="/login">
                <div class="ui stacked segment">
                    {{ forms.input('username', 'Ім\'я користувача', '', 'text', 'Ваше ім\'я користувача', error.username ?? null, {'required': 'required'}) }}
                    {{ forms.input('password', 'Пароль', '', 'password', 'Ваш пароль', error.password ?? null, {'required': 'required'}) }}
                    {{ ui.button('Увійти', 'teal', 'fluid large', 'sign-in') }}
                </div>

                {% if error.message is defined %}
                    <div class="ui error message">
                        <div class="header">Помилка входу</div>
                        <p>{{ error.message }}</p>
                    </div>
                {% endif %}
            </form>
            <div class="ui message">
                Новий користувач? <a href="#">Зареєструватися</a>
            </div>
        </div>
    </div>
{% endblock %}

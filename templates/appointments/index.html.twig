{% extends "layouts/base.html.twig" %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Календар записів - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <div class="ui grid">
            <div class="eight wide column">
                <h2 class="ui header">Календар записів</h2>
            </div>
            <div class="eight wide column right aligned">
                <a href="/appointments/new" class="ui primary button">
                    <i class="plus icon"></i> Створити запис
                </a>
            </div>
        </div>

        <div class="ui divider"></div>

        <div id='calendar'></div>

        <div class="ui divider"></div>
        <h3 class="ui header">Легенда статусів</h3>
        <div class="ui labels">
            <a class="ui label blue">Заплановано</a>
            <a class="ui label green">Виконано</a>
            <a class="ui label red">Скасовано</a>
            <a class="ui label yellow">Не з'явився</a>
            <a class="ui label grey">Інше</a>
        </div>

        <div class="ui divider"></div>
        <h3 class="ui header">Список записів</h3>
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Пацієнт</th>
                    <th>Лікар</th>
                    <th>Час початку</th>
                    <th>Час закінчення</th>
                    <th>Статус</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                {% for appointment in appointments %}
                    <tr>
                        <td>{{ appointment.id }}</td>
                        <td>{{ appointment.patient_name }}</td>
                        <td>{{ appointment.doctor_name }}</td>
                        <td>{{ appointment.start_time|date('Y-m-d H:i') }}</td>
                        <td>{{ appointment.end_time|date('Y-m-d H:i') }}</td>
                        <td>{{ appointment.status }}</td>
                        <td>
                            <a href="/appointments/show?id={{ appointment.id }}" class="ui icon button">
                                <i class="eye icon"></i>
                            </a>
                            <a href="#" class="ui icon button">
                                <i class="edit icon"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="center aligned">Немає записів для відображення.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/@fullcalendar/resource-timeline@6.1.15/index.global.min.js'></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                schedulerLicenseKey: 'CC-Attribution-NonCommercial-NoDerivatives', // For non-commercial use
                plugins: [ 'dayGridMonth', 'timeGridWeek', 'timeGridDay', 'resourceTimelinePlugin' ],
                initialView: 'resourceTimelineDay',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'resourceTimelineDay,resourceTimelineWeek,resourceTimelineMonth'
                },
                resourceAreaHeaderContent: 'Лікарі',
                resources: {{ doctors|json_encode|raw }},
                events: '/api/appointments', // API endpoint for events
                eventDidMount: function(info) {
                    // Додаємо tooltip або іншу інформацію при наведенні
                    $(info.el).popup({
                        title: info.event.title,
                        content: 'Час: ' + info.event.start.toLocaleTimeString() + ' - ' + info.event.end.toLocaleTimeString(),
                        position: 'top center'
                    });
                }
            });
            calendar.render();
        });
    </script>
{% endblock %}

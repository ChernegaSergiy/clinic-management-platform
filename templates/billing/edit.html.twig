{% extends "layouts/base.html.twig" %}
{% import "components/forms.html.twig" as forms %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Редагувати рахунок #{{ invoice.id }} - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <h2 class="ui header">Редагувати рахунок #{{ invoice.id }}</h2>
        <div class="ui divider"></div>

        <form class="ui form" method="POST" action="/billing/edit?id={{ invoice.id }}">
            <div class="two fields">
                {{ forms.select('patient_id', 'Пацієнт', patients, invoice.patient_id, errors.patient_id ?? null, {'required': 'required', 'disabled': 'disabled'}) }}
                {{ forms.input('amount', 'Сума', invoice.amount, 'number', '0.00', errors.amount ?? null, {'step': '0.01', 'required': 'required'}) }}
            </div>
            <div class="two fields">
                {{ forms.select('appointment_id', 'Запис на прийом (необов\'язково)', appointments, invoice.appointment_id, errors.appointment_id ?? null) }}
                {{ forms.select('medical_record_id', 'Медичний запис (необов\'язково)', medical_records, invoice.medical_record_id, errors.medical_record_id ?? null) }}
            </div>
            <div class="field">
                {{ forms.select('status', 'Статус', {'pending': 'Очікує оплати', 'paid': 'Оплачено', 'cancelled': 'Скасовано'}, invoice.status, errors.status ?? null, {'required': 'required'}) }}
            </div>
            {{ forms.textarea('notes', 'Примітки', invoice.notes, 'Додаткові примітки до рахунку') }}

            {{ ui.button('Зберегти зміни', 'primary', 'large', 'save') }}
            <a href="/billing/show?id={{ invoice.id }}" class="ui button">Скасувати</a>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('.ui.dropdown').dropdown();
        });
    </script>
{% endblock %}

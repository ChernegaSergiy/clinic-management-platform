{% extends "layouts/base.html.twig" %}

{% block title %}Панель клініки{% endblock %}

{% block body %}
    <div class="ui padded grid">
        <div class="row">
            <div class="ten wide column">
                <h1 class="ui huge dividing header">Панель</h1>
                <div class="ui mini horizontal divided list" style="margin-top:-8px;">
                    <div class="item"><i class="clock outline icon"></i>Оновлено зараз</div>
                    <div class="item"><i class="bell outline icon"></i>Сповіщення: {{ dashboardData.quickStats.lab_pending ?? 0 }} лаб, {{ dashboardData.quickStats.low_stock ?? 0 }} склад</div>
                </div>
            </div>
            {% if canExport %}
                <div class="six wide column right aligned">
                    <div class="ui mini basic buttons">
                        <a href="/dashboard/export-csv" class="ui button">CSV</a>
                        <a href="/dashboard/export-pdf" class="ui button">PDF</a>
                        <a href="/dashboard/export-excel" class="ui button">Excel</a>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="row">
            <div class="sixteen wide column">
                <h3 class="ui header">Оперативні показники</h3>
                <div class="ui five stackable cards">
                    <div class="blue card">
                        <div class="content">
                            <div class="header"><i class="users icon"></i> Пацієнтів</div>
                            <div class="description"><span class="ui huge header">{{ dashboardData.quickStats.patients_total|default(0) }}</span></div>
                        </div>
                    </div>
                    <div class="teal card">
                        <div class="content">
                            <div class="header"><i class="calendar check icon"></i> Прийомів сьогодні</div>
                            <div class="description"><span class="ui huge header">{{ dashboardData.quickStats.appointments_today|default(0) }}</span></div>
                        </div>
                    </div>
                    {% if canSeeFinance %}
                        <div class="green card">
                            <div class="content">
                                <div class="header"><i class="dollar sign icon"></i> Дохід 7д</div>
                                <div class="description"><span class="ui huge header">{{ dashboardData.quickStats.revenue_7d|default(0)|number_format(0, '.', ',') }} ₴</span></div>
                            </div>
                        </div>
                    {% endif %}
                    <div class="orange card">
                        <div class="content">
                            <div class="header"><i class="flask icon"></i> Лаб. в роботі</div>
                            <div class="description"><span class="ui huge header">{{ dashboardData.quickStats.lab_pending|default(0) }}</span></div>
                        </div>
                    </div>
                    <div class="red card">
                        <div class="content">
                            <div class="header"><i class="warehouse icon"></i> Low stock</div>
                            <div class="description"><span class="ui huge header">{{ dashboardData.quickStats.low_stock|default(0) }}</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if canSeeKpi %}
            <div class="ui hidden divider"></div>
            <div class="row">
                <div class="sixteen wide column">
                    <h3 class="ui header">KPI / фінансові картки</h3>
                    {% if dashboardData.kpis is not empty %}
                        <div class="ui five statistics">
                            {% for kpi_type, kpi_data in dashboardData.kpis %}
                                <div class="ui statistic">
                                    <div class="value">
                                        <i class="chart line icon"></i>
                                        {{ kpi_data.latest_value|number_format(kpi_data.definition.unit == '₴' ? 2 : (kpi_data.definition.unit == '%' ? 1 : 0), '.', ',') }}
                                        {% if kpi_data.definition.unit == '₴' %}<small>₴</small>{% endif %}
                                        {% if kpi_data.definition.unit and kpi_data.definition.unit != '₴' %}
                                            <small>{{ kpi_data.definition.unit }}</small>
                                        {% endif %}
                                    </div>
                                    <div class="label">{{ kpi_data.definition.name }}</div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="ui placeholder segment">
                            <div class="ui icon header">
                                <i class="chart bar outline icon"></i>
                                Немає активних KPI для відображення. Додайте визначення в адмінці.
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
        {% if canSeeFinance %}
            <div class="ui hidden section divider"></div>
            <div class="row">
                <h1 class="ui huge dividing header">Щоденний дохід за 7 днів</h1>
                <div class="sixteen wide column">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        {% endif %}

        {% if canSeeKpi %}
            <div class="ui hidden section divider"></div>
            <div class="row">
                <h1 class="ui huge dividing header">Зведена таблиця KPI</h1>
            </div>
            <div class="row">
                <table class="ui celled stackable table">
                    <thead>
                    <tr>
                        <th>Показник</th>
                        <th>Поточне значення</th>
                        <th>Зміна</th>
                        <th>Коментар</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for kpi_type, kpi_data in dashboardData.kpis %}
                        <tr>
                            <td>{{ kpi_data.definition.name }}</td>
                            <td>
                                {{ kpi_data.latest_value|number_format(kpi_data.definition.unit == '₴' ? 2 : 0, '.', ',') }}
                                {% if kpi_data.definition.unit == '₴' %}<small>₴</small>{% endif %}
                                {% if kpi_data.definition.unit and kpi_data.definition.unit != '₴' %}
                                    <small>{{ kpi_data.definition.unit }}</small>
                                {% endif %}
                            </td>
                            <td>
                                {% if kpi_data.trend %}
                                    {% if kpi_data.trend starts with '+' %}
                                        <i class="icon arrow up green"></i>
                                    {% elseif kpi_data.trend starts with '-' %}
                                        <i class="icon arrow down red"></i>
                                    {% else %}
                                        <i class="icon minus grey"></i>
                                    {% endif %}
                                    {{ kpi_data.trend }}
                                {% else %}
                                    N/A
                                {% endif %}
                            </td>
                            <td>{{ kpi_data.definition.description|default('Немає опису') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="center aligned">Немає доступних даних KPI.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const revenueChartData = {{ dashboardData.revenueChart|json_encode|raw }};
            const ctx = document.getElementById('revenueChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: revenueChartData.labels,
                    datasets: [{
                        label: 'Щоденний дохід (₴)',
                        data: revenueChartData.data,
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Щоденний дохід за останні 7 днів'
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Дата'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Дохід (₴)'
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}

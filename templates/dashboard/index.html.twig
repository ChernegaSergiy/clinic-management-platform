{% extends "layouts/base.html.twig" %}

{% block title %}Панель клініки{% endblock %}

{% block body %}
    <div class="ui padded grid">
        <div class="row">
            <h1 class="ui huge dividing header">Панель</h1>
        </div>
        <div class="row">
            <div class="right floated column">
                <a href="/dashboard/export-csv" class="ui primary button">Експорт в CSV</a>
                <a href="/dashboard/export-pdf" class="ui button">Експорт в PDF</a>
                <a href="/dashboard/export-excel" class="ui green button">Експорт в Excel</a>
            </div>
        </div>
        <div class="row">
            <div class="sixteen wide column">
                <div class="ui five statistics">
                        {% set kpi_card_mapping = {
                            'appointments_count': {label: 'Прийомів', icon: 'calendar check outline', color: 'blue'},
                            'revenue_generated': {label: 'Дохід', icon: 'dollar sign', color: 'green'},
                            'doctor_utilization': {label: 'Завантаженість', icon: 'user md', color: 'teal'},
                            'readmission_rate': {label: 'Повторні звернення', icon: 'hospital', color: 'red'},
                            'patient_satisfaction': {label: 'Задоволеність', icon: 'star outline', color: 'yellow'}
                        } %}

                        {% for kpi_type, kpi_info in kpi_card_mapping %}
                            {% set kpi_data = dashboardData.kpis[kpi_type] %}
                            <div class="ui statistic">
                                <div class="value">
                                    <i class="{{ kpi_info.icon }} icon"></i>
                                    {% if kpi_data %}
                                        {{ kpi_data.latest_value|number_format(kpi_data.definition.unit == '₴' ? 2 : (kpi_data.definition.unit == '%' ? 1 : 0), '.', ',') }}
                                        {% if kpi_data.definition.unit == '₴' %}<small>₴</small>{% endif %}
                                        {% if kpi_data.definition.unit == '%' %}<small>%</small>{% endif %}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </div>
                                <div class="label">
                                    {{ kpi_info.label }}
                                </div>
                            </div>
                        {% endfor %}
                </div>
            </div>
        </div>
        <div class="ui hidden section divider"></div>
        <div class="row">
            <h1 class="ui huge dividing header">Щоденний дохід за 7 днів</h1>
            <div class="sixteen wide column">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
        <div class="ui hidden section divider"></div>
        <div class="row">
            <h1 class="ui huge dividing header">Зведена таблиця KPI</h1>
        </div>
        <div class="row">
            <table class="ui single line striped selectable unstackable table">
                <thead>
                <tr>
                    <th>Показник</th>
                    <th>Поточне значення</th>
                    <th>Зміна</th>
                    <th>Коментар</th>
                </tr>
                </thead>
                <tbody>
                {% for kpi_type, kpi_data in dashboardData.kpis %}
                    <tr>
                        <td>{{ kpi_data.definition.name }}</td>
                        <td>
                            {{ kpi_data.latest_value|number_format(kpi_data.definition.unit == '₴' ? 2 : 0, '.', ',') }}
                            {% if kpi_data.definition.unit == '₴' %}<small>₴</small>{% endif %}
                            {% if kpi_data.definition.unit and kpi_data.definition.unit != '₴' %}
                                <small>{{ kpi_data.definition.unit }}</small>
                            {% endif %}
                        </td>
                        <td>
                            {% if kpi_data.trend %}
                                {% if kpi_data.trend starts with '+' %}
                                    <i class="icon arrow up green"></i>
                                {% elseif kpi_data.trend starts with '-' %}
                                    <i class="icon arrow down red"></i>
                                {% else %}
                                    <i class="icon minus grey"></i>
                                {% endif %}
                                {{ kpi_data.trend }}
                            {% else %}
                                N/A
                            {% endif %}
                        </td>
                        <td>{{ kpi_data.definition.description|default('Немає опису') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="center aligned">Немає доступних даних KPI.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const revenueChartData = {{ dashboardData.revenueChart|json_encode|raw }};
            const ctx = document.getElementById('revenueChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: revenueChartData.labels,
                    datasets: [{
                        label: 'Щоденний дохід (₴)',
                        data: revenueChartData.data,
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Щоденний дохід за останні 7 днів'
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Дата'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Дохід (₴)'
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}

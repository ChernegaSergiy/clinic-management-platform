{% extends "layouts/base.html.twig" %}
{% import "components/forms.html.twig" as forms %}
{% import "components/ui.html.twig" as ui %}

{% block title %}Створити лабораторне замовлення - Клініка{% endblock %}

{% block body %}
    <div class="ui segment">
        <h2 class="ui header">Створити нове лабораторне замовлення</h2>
        <p><strong>Пацієнт:</strong> {{ medical_record.patient_name }}</p>
        <p><strong>Лікар:</strong> {{ medical_record.doctor_name }}</p>
        <p><strong>Медичний запис ID:</strong> {{ medical_record.id }}</p>
        <div class="ui divider"></div>

        <form class="ui form" method="POST" action="/lab-orders/new?record_id={{ medical_record.id }}">
            {{ forms.input('order_code', 'Код замовлення', old.order_code ?? null, 'text', 'Наприклад, Загальний аналіз крові', errors.order_code ?? null, {'required': 'required'}) }}
            {{ forms.textarea('notes', 'Примітки', old.notes ?? null, 'Додаткові примітки до замовлення') }}

            {{ ui.button('Зберегти замовлення', 'primary', 'large', 'save') }}
            <a href="/medical-records/show?id={{ medical_record.id }}" class="ui button">Скасувати</a>
        </form>
    </div>
{% endblock %}

{
    "name": "clinic/platform",
    "description": "A Clinic Management Platform",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Serhii",
            "email": "serhii@example.com"
        }
    ],
    "require": {
        "twig/twig": "^3.22",
        "symfony/yaml": "^7.3",
        "vlucas/phpdotenv": "^5.6",
        "chillerlan/php-qrcode": "^5.0",
        "dompdf/dompdf": "^3.1",
        "phpoffice/phpspreadsheet": "^5.2",
        "chernegasergiy/nk-025-2021-parser": "^0.1.0",
        "chernegasergiy/nk-026-2021-parser": "^0.1.0",
        "robmorgan/phinx": "^0.16.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcbf --standard=PSR12 --ignore=vendor/ public/ src/",
        "cs-check": "phpcs --standard=PSR12 --ignore=vendor/ public/ src/",
        "stan": "phpstan analyse",
        "db:migrate": "phinx migrate",
        "db:rollback": "phinx rollback",
        "db:create": "phinx create",
        "db:seed": "phinx seed:run"
    },
    "config": {
        "platform": {
            "php": "8.2"
        }
    }
}

{
    "name": "clinic/platform",
    "description": "A Clinic Management Platform",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Serhii",
            "email": "serhii@example.com"
        }
    ],
    "require": {
        "twig/twig": "^3.22",
        "symfony/yaml": "^7.3",
        "vlucas/phpdotenv": "^5.6",
        "chillerlan/php-qrcode": "^5.0",
        "dompdf/dompdf": "^3.1",
        "phpoffice/phpspreadsheet": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "phpunit/phpunit": "^12.4"
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcbf --standard=phpcs.xml --exclude=vendor",
        "cs-check": "phpcs --standard=phpcs.xml --exclude=vendor",
        "stan": "phpstan analyse"
    }
}
